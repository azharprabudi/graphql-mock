{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true,
    "lib": ["dom", "es6"],
    "types": ["reflect-metadata"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
